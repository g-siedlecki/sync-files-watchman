{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "directories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "pattern": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "localPath": {
            "type": "string"
          },
          "remotePath": {
            "type": "string"
          },
          "excludeList": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name", "localPath", "remotePath", "excludeList"]
      }
    }
  },
  "required": ["directories"]
}
